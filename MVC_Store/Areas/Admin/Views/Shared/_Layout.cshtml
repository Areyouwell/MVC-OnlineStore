<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Area</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.css" />
    <link rel="stylesheet" href="~/MVC_Store.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light navbar-expand-lg bg-light bg-body-tertiary fixed-top">
            <div class="container-fluid">
                @Html.ActionLink("DashBoard", "Index", "DashBoard", "", new { @class="navbar-brand"} )
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            @Html.ActionLink("Pages", "Index", "Pages", "", new { @class="nav-link"} )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Sidebar", "EditSidebar", "Pages", "", new { @class="nav-link"} )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Categories", "Categories", "Shop", "", new { @class="nav-link"} )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Products", "Products", "Shop", "", new { @class="nav-link"} )
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Logout", "Logout", "Account", null, new {@class="navbar-text", style="text-decoration: none"})</li>
                        }
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li>
                            @Html.ActionLink("MVC Store", "Index", "Pages", new {area = ""}, new { @class="nav-link"} )
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; MVC_Store - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/ckeditor/3.6.4/Content/Scripts/ckeditor/ckeditor.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/jquery-ui.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
